	<content><![CDATA[
ll lqa(ll *arr,int n,ll value){
	ll i=lower_bound(arr,arr+n,value)-arr;
	if(i==0 && arr[i]>value) return -1;
	if(i==n) i--;
	if(arr[i]>value && i) i--;	
	return i;
}
]]></content>
